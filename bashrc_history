if ((  ${BASH_VERSINFO[0]} < 4 || \
      (${BASH_VERSINFO[0]} == 4 && ${BASH_VERSINFO[1]} < 3) )); then
  export HISTFILESIZE=10000000
  export HISTSIZE=10000000
else
  export HISTFILESIZE=-1
  export HISTSIZE=-1
fi
export HISTTIMEFORMAT='%Y-%m-%d+%H%M%S '
export HISTCONTROL=ignoredups
shopt -s histappend
